% Settings
\usecolortheme{elegant}
\usefonttheme{elegant}
\useinnertheme{elegant}
\useoutertheme{elegant}
%~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

%~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
% Navigation Bar
\setbeamertemplate{navigation symbols}{}

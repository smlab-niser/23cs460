% Margins
\makeatletter
    \setlength\beamer@paperwidth{20.00cm}%
    \setlength\beamer@paperheight{13.00cm}%
    \geometry{papersize={\beamer@paperwidth,\beamer@paperheight}}
\makeatother
\setbeamersize{text margin left=15mm,text margin right=15mm} 

